<!DOCTYPE html>
<!-- in views/users.ejs -->
<html>
  <head>
    <title>User Details</title>
    <!-- <link rel="stylesheet" href="/stylesheets/style.css" /> -->
    <!-- CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <!-- JavaScript Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-6">
          <h1>Welcome</h1>
          <br />
          <p>Here are your tokens:</p>
          <div class="card p-3">
            <% Object.keys(user).forEach(function(item) { %>
              <% if (item !== 'scope') { %>
                <b><%- item %></b><code><%- user[item] %></code>
                <br />
              <% } %>
            <% }); %>
          </div>
        </div>
        <div class="col-6">
          <h1>Welcome <em><%= decodedUser.id_token.name %></em></h1>
          <br />
          <p>Here are your decoded tokens:</p>
          <div class="card p-3">
            <% Object.keys(decodedUser).forEach(function(item) { %>
              <b><%- item %></b><% Object.keys(decodedUser[item]).forEach(function(nItem) { %>
                <code><%- nItem %>: <%- decodedUser[item][nItem] %></code>
                <% }) %>
              <br />
            <% }); %>
          </div>
        </div>
        <form action="/logout">
          <input type="submit" value="Logout">
        </form>
      </div>
    </div>
  </body>
</html>